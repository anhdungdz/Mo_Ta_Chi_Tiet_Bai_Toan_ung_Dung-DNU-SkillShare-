@model DashboardDaiNam.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Chỉnh sửa người dùng</h2>

    <form asp-action="Edit" method="post" class="card p-4 shadow">
        <input type="hidden" asp-for="Id" />
        
        <div class="mb-3">
            <label asp-for="Name" class="form-label">Họ tên</label>
            <input asp-for="Name" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Role" class="form-label">Vai trò</label>
            <input asp-for="Role" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Lưu thay đổi</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>