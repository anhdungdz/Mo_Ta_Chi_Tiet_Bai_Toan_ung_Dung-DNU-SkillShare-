@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var username = HttpContextAccessor.HttpContext.Session.GetString("Username");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div style="position: absolute; top: 20px; right: 30px;">
        @if (!string.IsNullOrEmpty(username))
        {
            <span>👋 Chào, <strong>@username</strong></span>
            <a asp-controller="Account" asp-action="Logout" style="margin-left: 15px; color: red;">Đăng xuất</a>
        }
        else
        {
            <a asp-controller="Account" asp-action="Login" style="margin-right: 15px;">Đăng nhập</a>
            <a asp-controller="Account" asp-action="Register">Đăng ký</a>
        }
    </div>

    <div class="wrapper">
        <nav class="sidebar">
            <h3>ĐẠI HỌC ĐẠI NAM</h3>
            <ul style="list-style: none; padding-left: 0;">
                <li><a href="/Dashboard" style="color: white; text-decoration: none;">Thống kê tổng quan</a></li>
                <li><a href="/Users" style="color: white; text-decoration: none;">Quản lý người dùng</a></li>
                <li><a href="/Help" style="color: white; text-decoration: none;">Tin cần giúp đỡ</a></li>
                <li><a href="/Share" style="color: white; text-decoration: none;">Chia sẻ bài đăng</a></li>
                <li><a href="/Rating" style="color: white; text-decoration: none;">Đánh giá</a></li>
                <li><a href="/Settings" style="color: white; text-decoration: none;">Cài đặt</a></li>
            </ul>
        </nav>

        <main>
            <header class="topbar">
                <input type="text" placeholder="Hãy thử tìm"/>
                <span>👤</span>
            </header>

            <section class="main-content">
                @RenderBody()
            </section>

            <footer class="footer">© Đại Nam University</footer>
        </main>
    </div>
</body>
</html>
