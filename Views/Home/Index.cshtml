            labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May'],
            datasets: [{
                label: 'Người dùng mới',
                data: [5, 10, 15, 20, 25],
                backgroundColor: 'orange'
            }]
        }
    });

    const helpRateChart = new Chart(document.getElementById('helpRateChart'), {
        type: 'doughnut',
        data: {
            labels: ['Đã giúp', 'Chưa giúp'],
            datasets: [{
                data: [70, 30],
                backgroundColor: ['blue', 'lightgray']
            }]
        }
    });
</script>