@model DashboardDaiNam.Models.User

@{
    ViewData["Title"] = "Cài đặt tài khoản";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Cài đặt tài khoản</h2>

    @if (Model != null)
    {
        <div class="card shadow-lg p-4">
            <form asp-action="UpdateAccount" asp-controller="Settings" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Họ tên</label>
                    <input asp-for="Name" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" type="email" required />
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label">Vai trò</label>
                    <input asp-for="Role" class="form-control" readonly />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    }
    else
    {
        <div class="alert alert-danger text-center">
            Không tìm thấy thông tin người dùng.
        </div>
    }
</div>